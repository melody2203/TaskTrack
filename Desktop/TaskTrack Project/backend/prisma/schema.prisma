generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MANAGER
  MEMBER
}

enum Status {
  PENDING
  IN_PROGRESS
  DONE
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  role          Role     @default(MEMBER)
  created_at    DateTime @default(now())
  
  tasks_assigned Task[]   @relation("AssignedTasks")
  tasks_created  Task[]   @relation("CreatedTasks")
}

model Task {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  deadline     DateTime
  status       Status   @default(PENDING)
  created_at   DateTime @default(now())

  assigned_to_id Int
  assigned_to    User @relation("AssignedTasks", fields: [assigned_to_id], references: [id])

  created_by_id  Int
  created_by     User @relation("CreatedTasks", fields: [created_by_id], references: [id])
}

